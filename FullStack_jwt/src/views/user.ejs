<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container ">
      <div class="row">
        <div class="user-infor-container">
          <form method="POST" action="/users/create-user">

            <div class="mb-3 mt-3 col-12 col-sm-6">
              <label for="email" class="form-label">Email
                address</label>
              <input type="email" class="form-control" name="email" id="email"
                required>

            </div>
            <div class="col-6"></div>

            <div class="mb-3  col-12 col-sm-6">
              <label for="password"
                class="form-label">Password</label>
              <input type="password" name="password" class="form-control"
                id="password" required>
            </div>
            <div class="col-6"></div>

            <!--   -->
            <div class="col-12 col-sm-6 mb-3">
              <label for="username"
                class="form-label">Username</label>
              <input type="text" class="form-control"
                name="username"
                id="username" required>
            </div>
            <div class="col-6"></div>
            <div class="col-6 text-center">

              <button type="submit" class="btn btn-primary">Submit</button>
            </div>

          </form>
        </div>

        <div class="table-users mt-5 ">
          <h3 class="mb-4">Table user: </h3>

          <table class="table table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">User Name</th>
                <th scope="col">Action</th>

              </tr>
            </thead>
            <tbody>

              <% listuser.map(item => { %>

              <tr>
                <th scope="row">
                  <%= item.id %>
                </th>
                <td> <%= item.email %></td>
                <td><%= item.username %></td>
                <td>
                  <div style="display: flex; gap: 10px;">
                    <form action="/user/update/<%= item.id %>" method="get">
                      <button class="btn btn-success">Edit</button>
                    </form>

                    <form method="post"
                      action="/users/delete-user/<%= item.id %>">

                      <button class="btn btn-danger"
                        type="submit">Delete</button>
                    </form>
                  </div>
                </td>

              </tr>

              <% })%>

            </tbody>
          </table>

        </div>

      </div>
    </div>
  </body>
</html>